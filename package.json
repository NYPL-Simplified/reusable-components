{
  "name": "library-simplified-reusable-components",
  "version": "1.0.0",
  "description": "Reusable React components for Library Simplified interfaces",
  "repository": {
    "type": "git",
    "url": "https://github.com/NYPL-Simplified/reusable-components.git"
  },
  "main": "lib/index.js",
  "author": "NYPL",
  "license": "Apache-2.0",
  "scripts": {
    "prepublish": "typings install && npm run prod",
    "lint": "tslint -c tslint.json src/*.ts src/*.tsx src/**/*.ts src/**/*.tsx src/**/**/*.ts src/**/**/*.tsx && sass-lint -c .sass-lint.yml -v -q",
    "test": "npm run lint && tsc && cp -r src/stylesheets lib && mocha --require lib/testHelper.js lib/__tests__/*.js lib/**/__tests__/*.js lib/**/**/__tests__/*.js",
    "test-file": "npm run lint && tsc && cp -r src/stylesheets lib && mocha --require lib/testHelper.js",
    "dev": "rm -rf dist && NODE_ENV=development webpack --watch --progress --display-modules --config webpack.prod.config",
    "prod": "rm -rf dist && NODE_ENV=production webpack -p --progress --display-modules --config webpack.prod.config"
  },
  "dependencies": {
    "@nypl/dgx-svg-icons": "^0.3.9",
    "bootstrap": "^3.3.6",
    "opds-web-client": "0.1.27",
    "react": "^15.4.0",
    "react-bootstrap": "0.29.4",
    "react-dom": "^15.4.0",
    "react-redux": "^5.0.6",
    "react-router": "^3.2.0",
    "redux": "^3.7.2",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "css-loader": "^0.24.0",
    "enzyme": "^2.3.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "jsdom": "^9.5.0",
    "json-loader": "^0.5.4",
    "mocha": "^5.2.0",
    "node-sass": "^3.8.0",
    "react-addons-test-utils": "^15.3.0",
    "sass-lint": "^1.9.1",
    "sass-loader": "^4.0.0",
    "sinon": "^1.17.4",
    "style-loader": "^0.13.1",
    "ts-loader": "^0.8.2",
    "tslint": "^3.10.2",
    "typescript": "2.1.6",
    "typings": "^2.1.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1"
  }
}
